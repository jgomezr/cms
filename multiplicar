<!DOCTYPE html>
<html lang="es">
<head>
	<script type="text/javascript">
		window.onload = function(){
		    var form = document.forms.formulario;
		    form.oninput = function() {
		        form.out.value = form.num.value*'2';
		    }
		}
	</script>
</head>
<body>
	<form id="formulario">
	  <input type="number" name="num">
	  <output name="out"></output>
	</form>
</body>
</html>
